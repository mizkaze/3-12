  <body>
    <p id="notice"></p>
    
    <h1>Books</h1>
    
    <table>
      
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      
      <tbody>
        <% @books_open.each do |book| %>
            <!--「.each」存在するBookレコードの数だけ繰り返し処理を実行-->
          <tr>
            <!--タイトル-->
            <td><%= book.title %></td>
            <!--book.[カラム名]＝そのカラムのデータ(レコード)を一つ表示-->
            <!--本文-->
            <td><%= book.body %></td>
            <td><%= link_to 'Show', book_path(book.id) %></td>
            <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
            <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
          </tr>
        <% end %>
        
      </tbody>
      
    </table>

  

    <h2>New Book</h2>
    <!--バリデーションエラーの表示-->
    <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= @book.errors.count %>errors prohibited this book from being saved:
      </h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    
    <%= form_with model: @book, url: '/books', method: :post do |f| %>
      <div class="field">
        <label for="book_title">Tile</label>
        <%= f.text_field :title %>
      </div>
      
      
      <div class="field">
         <label for="book_body">Body</label>
        <%= f.text_area :body %>
      </div>
     
      <div class="actions">
        <%= f.submit 'Create Book' %>
      </div>
      
      
      
    <% end %>
    
  </body>
</html>

